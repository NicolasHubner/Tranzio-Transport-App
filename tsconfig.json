{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "types": ["nativewind/types", "node"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src", "App.tsx"]
}
